<div class="sale">
    <h2><%= @sale.title %></h2>

    <span><%= @sale.date.strftime("%B %d, %Y") %></span><br/>

    <% if @contact %> 
        <span><%= link_to @contact.name, @contact %></span>
    <% end %>
        <% if @contact.nil? %>
        <%= link_to "Add Contact", add_contact_path(@sale)%>
    <% end %>
    <br/><br/>

    <span class="lead"> $ <%= "%.2f" % @sale.price %> </span>
</div>