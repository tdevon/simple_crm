<div class="container">
    <h3> Create Touchpoint </h3>
    <div id="new_touchpoint_form">
        <%= form_for([@contact, @touchpoint]) do |f|%>
            <div class="form-group">
                <%= f.date_field :date, :class=>"form-control", :value => Time.now.strftime('%Y-%m-%d')%>
            </div>
            <div class="form-group">
                <%= f.text_field :title, :class=>"form-control", :placeholder => "Name for touchpoint" %>
            </div>
            <div class="form-group">
                <%= f.text_field :details, :class=>"form-control", :placeholder => "Touchpoint details" %>
            </div>
            <%= f.submit :class=>"btn btn-primary"%>
        <% end %>
    </div>
</div>